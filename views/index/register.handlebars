<div class="register-photo">
	<div class="form-container">
		<div class="image-holder"></div>
		<form action="/auth/register" method="post">
			<h2 class="text-center"><strong>Create</strong> an account.</h2><select class="border rounded form-control"
				name="d" value="dd">
				<option value="student" selected="">Student</option>
				<option value="school">School</option>
			</select>
			<div class="form-group"><input class="border rounded form-control" type="email" name="email"
					placeholder="Email"></div><input class="border rounded form-control" type="text" name="fullname"
				placeholder="Full Name"><input class="border rounded form-control" type="text" name="username"
				placeholder="Username">
			<div class="form-group"><input class="border rounded form-control" type="password" name="password"
					placeholder="Password" autofocus="" autocomplete="off"></div>
			<div class="form-group">
				<div class="form-check"><label class="form-check-label"><input class="form-check-input"
